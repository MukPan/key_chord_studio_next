generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

//モデルの定義
model User {
  //PK
  id        Int          @id @default(autoincrement())
  //field
  name      String       @unique
  password  String
  createdAt DateTime     @default(now()) //作成日時の項目
  updatedAt DateTime     @updatedAt //更新日時の項目
  chords    ChordGroup[]
}

model ChordGroup {
  //PK
  id        Int      @id @default(autoincrement())
  //FK
  user      User     @relation(fields: [userId], references: [id])
  userId    Int
  //field
  name      String //保存したコード進行名
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  chords    Chord[]
}

model Chord {
  //PK
  id           Int        @id @default(autoincrement())
  //FK
  chordGroup   ChordGroup @relation(fields: [chordGroupId], references: [id])
  chordGroupId Int
  //field
  name         String //コード名
  chordNotes   Key[]
}

model Key {
  //PK
  id       Int   @id @default(autoincrement())
  //FK
  chord    Chord @relation(fields: [chordId], references: [id])
  chordId  Int
  //field
  keyIndex Int
}
